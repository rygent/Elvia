{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "removeComments": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist/**/*", "node_modules"]
}
